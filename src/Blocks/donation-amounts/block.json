{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "famehelsinki/donation-amounts",
	"version": "0.1.0",
	"title": "Donation amounts",
	"category": "widgets",
	"description": "Allows selecting donation amounts.",
	"parent": ["famehelsinki/donation-form"],
	"usesContext": ["famehelsinki/donation-types"],
	"example": {},
	"attributes": {
		"settings": {
			"type": "array",
			"default": [
				{
					"type": "single",
					"default": true,
					"defaultAmount": 10,
					"minAmount": 10,
					"maxAmount": 10000,
					"unit": "€",
					"amounts": [{ "value": 10 }, { "value": 20 }, { "value": 30 }]
				},
				{
					"type": "recurring",
					"default": false,
					"defaultAmount": 10,
					"minAmount": 10,
					"maxAmount": 10000,
					"unit": "€",
					"amounts": [{ "value": 10 }, { "value": 20 }, { "value": 30 }]
				}
			]
		},
		"showLegend": { "type": "boolean", "default": true },
		"legend": { "type": "string", "default": "Donation amount" },
		"other": { "type": "boolean", "default": false },
		"otherLabel": { "type": "string", "default": "Other amount" }
	},
	"supports": {
		"multiple": false,
		"color": { "background": false, "text": true },
		"html": false,
		"typography": { "fontSize": true }
	},
	"icon": "database",
	"textdomain": "fame_lahjoitukset",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"render": "file:./render.php"
}
